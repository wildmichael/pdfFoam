FoamFile
{
    version         2;
    format          ascii;
    class           dictionary;
    location        "constant";
    object          thermophysicalProperties;
}
// * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * * //

cloudProperties
{
    velocityModel   SLMFull;
    positionCorrection limitedSimple;
    localTimeStepping cell;
    OmegaModel        RAS;
    mixingModel       IEM;
    reactionModel     KulkarniAutoIgnition;
    scalarFields      ( z c pv T d );
    mixedScalars      ( z c );
    conservedScalars  ( z );
    KulkarniAutoIgnitionReactionModelCoeffs
    {
      scalars ( T );
    }
    boundaryHandlers
    {
        inlet
        {
            type                inletOutlet;
            randomGenerator
            {
                type            inversion;
            }
        }
        fuel
        {
            type                inletOutlet;
            randomGenerator
            {
                type            inversion;
            }
        }
        outlet
        {
            type                inletOutlet;
            randomGenerator
            {
                type            inversion;
            }
        }
        walls
        {
            type                slip;
        }
    }
}

